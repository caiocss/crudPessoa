@model CrudPessoa.Models.Pessoa

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remover pessoa</h1>

<h3>Tem certeza que quer remover a pessoa abaixo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dinheiro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dinheiro)
        </dd>
    </dl>
    
    <form asp-action="DeletarPessoa">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista de pessoas</a>
    </form>
</div>
